//Brute Force

class Solution {
public:
    int countBinarySubstrings(string s) {
        vector<int>count;
        int sum=1;
        for(int i=1;i<=s.size();i++){
            if(s[i]==s[i-1])
                sum++;
            else{
                count.push_back(sum);
                sum=1;
            }
        }

        int ans=0;
        for(int i=1;i<count.size();i++){
            ans+=min(count[i],count[i-1]);
        }

        return ans;
    }
};
